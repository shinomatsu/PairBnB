<%= form_for @user do |form| %>

<!-- first_name_form -->
<div class="text-field">
  <%= form.label :first_name %>
  <%= form.text_field :first_name, type: 'first_name' %>
</div>

<!-- last_name_form -->
<div class="text-field">
  <%= form.label :last_name %>
  <%= form.text_field :last_name, type: 'last_name' %>
</div>

<!-- gender_form -->
<div class="text-field">
  <%= form.label :gender %>
  <%= form.text_field :gender, type: 'gender' %>
</div>

<!-- country_form -->
<div class="text-field">
  <%= form.label :country %>
  <%= form.text_field :country, type: 'country' %>
</div>


<!-- email_form -->
<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>

<!-- phone_form -->
<div class="text-field">
  <%= form.label :phone %>
  <%= form.text_field :phone, type: 'phone' %>
</div>

<!-- password_form -->
<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>

<div class="submit-field">
  <%= form.submit %>
</div>
  
<% end %> 


